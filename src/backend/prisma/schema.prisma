datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Image {
  id         String   @id @default(cuid())
  name       String
  description String   @default("")
  width      Int
  height     Int
  tileSize   Int       @default(256)
  maxZoom    Int
  format     String    // "png" | "jpg"
  scheme     String    @default("xyz")
  tilesBase  String    // e.g. https://<acct>.blob.core.windows.net/tiles/<id>
  status     String    @default("queued") // queued|tiling|ready|failed
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
